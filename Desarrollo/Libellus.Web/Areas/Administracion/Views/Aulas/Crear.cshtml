@model Libellus.Web.Areas.Administracion.Models.Aulas.AulaViewModel

@{
    ViewBag.Title = "Crear aula";
}

<div class="content-header">
    <h2 class="content-header-title">@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("Crear", "Aulas", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.Descripcion)
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", maxlength = "30", tabindex = "1" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.IdMaestro)
            @Html.DropDownListFor(model => model.IdMaestro, Model.TiposAula, new { @class = "form-control", tabindex = "2" })
            @Html.ValidationMessageFor(model => model.IdMaestro, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group centered">
        @Html.BotonCancelar("Consultar", "Aulas", null, new { tabindex = "4"})
        <input type="submit" value="Crear aula" class="btn btn-primary" tabindex="3" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
