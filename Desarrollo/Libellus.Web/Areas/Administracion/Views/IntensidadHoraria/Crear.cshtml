@model Libellus.Web.Areas.Administracion.Models.IntensidadHoraria.IntensidadHorariaViewModel

@{
    ViewBag.Title = "Crear registro de intensidad horaria";
}

<div class="content-header">
    <h2 class="content-header-title">@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("Crear", "IntensidadHoraria", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    Html.RenderPartial("_Administrar");

    <br />
    <div class="form-group centered">
        @Html.BotonCancelar("Consultar", "IntensidadHoraria", null, new { tabindex = "9" })
        <input type="submit" value="Crear registro de intensidad horaria" class="btn btn-primary" tabindex="8" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/js/cascadingDropDown")

    <script type="text/javascript">
        $(document).ready(function () {

            $("#asignatura").CascadingDropDown("#area", '@Url.Action("ObtenerAsignaturas")', {
                idSelectedValue: '@Model.IdAsignatura'
            });

        });
    </script>
}