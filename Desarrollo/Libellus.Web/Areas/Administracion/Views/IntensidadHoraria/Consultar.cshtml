@model IPagedList<Libellus.Web.Areas.Administracion.Models.IntensidadHoraria.IntensidadHorariaViewModel>

@{
    ViewBag.Title = "Consultar";
    object valorAnio = ViewBag.AnioLectivo;
}

<div class="content-header">
    <h2 class="content-header-title">Intensidad horaria</h2>
</div>

<p>
    @Html.ActionLink("Crear registro de intensidad horaria", "Crear")
</p>

@using (Html.BeginForm("Consultar", "IntensidadHoraria", FormMethod.Get, new { data_otf_ajax = "true", data_otf_target = "#resultado" }))
{
    <div class="row">
        <div class="form-group col-md-4">
            @Html.Partial("_AniosLectivos", valorAnio)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.First().IdGrado)
            @Html.DropDownList("Grado", ViewBag.Grados as IEnumerable<SelectListItem>, new { @class = "form-control", tabindex = "2" })
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.First().IdArea)
            @Html.DropDownList("Area", ViewBag.Areas as IEnumerable<SelectListItem>, new { @class = "form-control", tabindex = "3" })
        </div>
    </div>

    <br />
    <div class="form-group centered">
        <input type="submit" value="Consultar" class="btn btn-primary" tabindex="3" />
    </div>
}

@Html.Partial("_ResultadoConsulta", Model)